{
  "version": 2,
  "builds": [
    {
      "src": "flask-app/app.py",
      "use": "@vercel/python"
    },
    {
      "src": "flask-app/static/**",
      "use": "@vercel/static"
    },
    {
      "src": "flask-app/templates/**",
      "use": "@vercel/static"
    }
  ],
  "routes": [
    {
      "src": "/static/(.*)",
      "dest": "/flask-app/static/$1"
    },
    {
      "src": "/(.*)",
      "dest": "/flask-app/app.py"
    }
  ]
}
